@model RoleViewModel
@inject RoleManager<IdentityRole> roleManager;
@{
    ViewData["Title"] = "Create Roles";
    int counter = 0;
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Adminstration" asp-action="CreateRole" method="post">
            <h4>Create a new role.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <table class="table table-hover table-striped table-bordered table-borderless">
            <thead>
                <tr>
                    <td><b> Number</b></td>
                    <td><b>Role Name</b></td>
                    <td><b>Manage Record</b></td>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var role in roleManager.Roles)
                {
                    counter += 1;
                    <tr>
                        <td>@counter</td>
                        <td>@role.Name</td>
                        <td><a class="btn btn-default" asp-controller="Adminstration" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                        &nbsp; | &nbsp; 
                        Delete</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
